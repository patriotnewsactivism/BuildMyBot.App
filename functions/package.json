{
  "name": "buildmybot-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for BuildMyBot - Secure API proxy for OpenAI and other services",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.6.0",
    "openai": "^4.24.1",
    "cors": "^2.8.5",
    "twilio": "^4.19.0",
    "stripe": "^14.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3",
    "firebase-functions-test": "^3.1.1"
  },
  "private": true
}
