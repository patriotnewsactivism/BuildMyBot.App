# BuildMyBot.App Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================
# SUPABASE (Required)
# Get from: https://app.supabase.com > Project Settings > API
# ============================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# For Edge Functions (server-side only)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# OPENAI (Required for chat/AI features)
# Get from: https://platform.openai.com/api-keys
# ============================================
VITE_OPENAI_API_KEY=sk-your-openai-api-key-here

# Server-side only (for Edge Functions)
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# RETELL AI (Required for Phone Agent)
# Get from: https://www.retellai.com > Dashboard > API Keys
# ============================================
VITE_RETELL_API_KEY=your-retell-api-key-here

# ============================================
# STRIPE (Required for billing)
# Get from: https://dashboard.stripe.com/apikeys
# ============================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV=development
VITE_APP_URL=http://localhost:8080
VITE_APP_DOMAIN=buildmybot.app

# ============================================
# FEATURE FLAGS (Optional)
# Set to "true" to enable, anything else to disable
# ============================================
VITE_FEATURE_PHONE_AGENT=true
VITE_FEATURE_WEBSITE_BUILDER=true
VITE_FEATURE_MARKETPLACE=true
VITE_FEATURE_RESELLER_PROGRAM=true
VITE_FEATURE_WHITE_LABEL=true
